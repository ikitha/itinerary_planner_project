<div class="container">
	<%= simple_form_for([@itinerary, @waypoint], html: {class: 'form-horizontal' }) do |f| %>
		<%= f.input(:name, placeholder: "Attraction") %>
		<%= f.input(:location, placeholder: "Address") %>
		<%= f.date_field(:visit_date, placeholder: "Date of Visit") %>
		<%= submit_tag("Create Waypoint") %>
	<% end %>
</div>