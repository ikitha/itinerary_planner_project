<div class="container">
	<%= simple_form_for([@itinerary, @waypoint], method: "put", html: {class: 'form-inline' }) do |f| %>
		<%= f.text_field(:name, placeholder: "Attraction") %>
		<%= f.text_field(:location, placeholder: "Address") %>
		<%= f.date_field(:visit_date, placeholder: "Date of Visit") %>
		<% if @travelers != nil %>
		Travelers: <br>
		
		<% for t in @travelers %>
		<%= f.check_box :travelers, {checked: @waypoint.travelers.include?(t), multiple: true}, t.id.to_i, nil %>
		<%= t.first_name %> <%= t.last_name %>
		<% end %>
		<br>
		<% end %>
		<%= f.submit %>
	<% end %>
	<%= form_for @waypoint, url: itinerary_waypoint_path(@waypoint.id), method: "delete" do |f| %>
		<%= submit_tag("Delete Waypoint") %>
	<% end %>
</div>